{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "lib": ["ES2021", "DOM"],
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src"
    }
}
